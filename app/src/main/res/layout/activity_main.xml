<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewFondoCarta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fondo_carta" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewFondoLogo"
            android:layout_width="345dp"
            android:layout_height="59dp"
            app:srcCompat="@drawable/love_letter" />

        <TextView
            android:id="@+id/TextViewIntroduceNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Introduzca nombre de jugador:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00E3D7D7"
            android:onClick="tomarFoto"
            android:text="Foto"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btnAceptarInicio"
            android:layout_width="119dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:backgroundTint="#00E3D7D7"
            android:onClick="siguiente"
            android:text="Aceptar"
            android:textColor="#000000" />
    </LinearLayout>

</FrameLayout>